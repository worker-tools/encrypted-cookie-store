{
  "name": "@worker-tools/encrypted-cookie-store",
  "version": "0.2.1-pre.0",
  "description": "A CookieStore implementation that transparently encrypts cookie values via Web Cryptography API",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": "./index.js"
  },
  "files": [
    "src",
    "*.js*",
    "*.d.ts*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -f *.d.ts *.js *.js.map *.d.ts.map",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "tsc -d",
    "watch": "tsc -d -w",
    "prepack": "npm run clean && npm run build"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "MIT",
  "dependencies": {
    "base64-encoding": "^0.14.3",
    "cookie-store-interface": "^0.1.1",
    "typed-array-utils": "^0.2.2",
    "uuid-class": "^0.12.3"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@worker-tools/location-polyfill": "^0.3.2-pre.1",
    "@worker-tools/request-cookie-store": "^0.4.3",
    "jest": "^27.5.1",
    "jest-environment-miniflare": "^2.3.0",
    "miniflare": "^2.3.0",
    "typescript": "^4.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/worker-tools/encrypted-cookie-store.git"
  },
  "bugs": {
    "url": "https://github.com/worker-tools/encrypted-cookie-store/issues"
  },
  "homepage": "https://github.com/worker-tools/encrypted-cookie-store#readme",
  "keywords": [
    "cookies",
    "cookie-store",
    "encryption",
    "encrypted-cookies",
    "web-crypto",
    "web-cryptography",
    "middleware",
    "cloudflare",
    "cloudflare-workers"
  ]
}
